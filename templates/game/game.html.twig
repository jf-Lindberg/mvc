{% extends "base.html.twig" %}
{% block title %}{{ title }}{% endblock %}
{% block content %}
    <div class="flex-column-center">
        <p class="player">Spelare</p>
        {% set deck = playerData.hand %}
        {{ include ("block/show-cards.html.twig") }}
        {% if bankData.hand != null %}
            <p class="player">Bank</p>
            {% set deck = bankData.hand %}
            {{ include ("block/show-cards.html.twig") }}
        {% endif %}
        {{ include ("block/flash-message.html.twig") }}
        <form action="{{ path('game-form') }}" method="post">
            <input type="submit" name="hit" value="Ett till kort">
            <input type="submit" name="stay" value="Stanna">
            <input type="submit" name="new" value="Nytt spel">
        </form>
    </div>
{% endblock %}
